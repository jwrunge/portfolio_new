{
  "name": "svelte-app",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "sass-build": "sass --style=compressed src/global.scss public/global.css",
    "sass-dev": "sass --watch src/global.scss public/global.css",
    "build": "rollup -c",
    "dev": "rollup -c -w",
    "php-serve": "php -S localhost:5000 -t public",
    "serve": "run-p sass-dev dev php-serve"
  },
  "devDependencies": {
    "@jwrunge/modal": "^1.0.6",
    "@rollup/plugin-commonjs": "^17.0.0",
    "@rollup/plugin-node-resolve": "^11.0.0",
    "cross-env": "^7.0.3",
    "npm-run-all": "^4.1.5",
    "rollup": "^2.3.4",
    "rollup-plugin-css-only": "^3.1.0",
    "rollup-plugin-livereload": "^2.0.0",
    "rollup-plugin-svelte": "^7.0.0",
    "rollup-plugin-terser": "^7.0.0",
    "sass": "^1.37.5",
    "svelte": "^3.0.0",
    "svelte-preprocess": "^4.7.4"
  }
}
